<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Trainee Notes"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TraineeNotesApp">

        <!-- Home screen -->
        <activity android:name="com.walu.traineenotesapp.ui.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login & Signup -->
        <activity android:name="com.walu.traineenotesapp.ui.LoginActivity" />
        <activity android:name="com.walu.traineenotesapp.ui.SignupActivity" />

        <!-- Subject screen -->
        <activity android:name="com.walu.traineenotesapp.ui.SubjectActivity" />

        <!-- Notes listing for selected subject -->
        <activity android:name="com.example.traineenotes.NotesActivity" />

        <!-- Add/edit individual note -->
        <activity android:name="com.walu.traineenotesapp.ui.NoteEditorActivity" />
    </application>

</manifest>
